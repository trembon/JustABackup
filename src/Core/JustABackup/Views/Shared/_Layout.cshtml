                        </ul>
                    </nav>
                </div>
            </aside>
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>

            <article class="content">
                @if (Context.Response.StatusCode == 200)
                {
                    <div class="title-block">
                        <h1 class="title">@Model.Title</h1>
                        @if (!string.IsNullOrWhiteSpace(Model.TitleDescription))
                        {
                            <p class="title-description">@Model.TitleDescription</p>
                        }
                    </div>
                }

                @RenderBody()
            </article>

            <footer class="footer">
                <div class="footer-block text-center w-100">
                    <a href="https://github.com/JustABackup/JustABackup" target="_blank" rel="noreferrer">Just A Backup</a> &copy; @DateTime.Now.Year
                </div>
            </footer>
        </div>
    </div>

    <environment names="Development">
        <script src="~/app/vendor.js"></script>
        <script src="~/app/jqCron.js"></script>
        <script src="~/app/jqCron.en.js"></script>
        <script src="~/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
        <script src="~/app/app.js"></script>
        <script asp-append-version="true" asp-src-include="~/js/*.js" asp-src-exclude="~/js/*.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/libs.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

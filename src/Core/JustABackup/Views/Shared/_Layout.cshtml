        <link rel="stylesheet" href="~/app/vendor.css" />
        <link rel="stylesheet" href="~/app/jqCron.css" />
        <link rel="stylesheet" href="~/app/app.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/app/vendor.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/app/app.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

@model ListJobHistoryModel
@{ 
    Model.Title = "History";
    Model.TitleDescription = "List of previously run backup jobs.";
}

<section class="section">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-block">
                    <section>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Started</th>
                                        <th>Run time</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var job in Model.JobHistory)
                                    {
                                        <tr>
                                            <td>@job.JobName</td>
                                            <td>@job.Started</td>
                                            <td>@job.RunTime</td>
                                            <td>@job.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
                                            <div class="body-col">
                                                <p>
                                                    <span class="accent">Andy Nouman</span> deployed new version of
                                                    <span class="accent">NodeJS REST Api V3</span>
                                                </p>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                                <footer>
                                    <ul>
                                        <li>
                                            <a href=""> View All </a>
                                        </li>
                                    </ul>
                                </footer>
                            </div>
                        </li>
                    </ul>*@
                </div>
            </header>
            <aside class="sidebar">
                <div class="sidebar-container">
                    <div class="sidebar-header">
                        <div class="brand">
                            Just A Backup
                        </div>
                    </div>
                    <nav class="menu">
                        <ul class="sidebar-menu metismenu" id="sidebar-menu">
                            <li>
                                <a href="@Url.Action("Index", "Home")">
                                    <i class="fa fa-home"></i> History
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fa fa-th-large"></i> Scheduled Jobs
                                    <i class="fa arrow"></i>
                                </a>
                                <ul class="sidebar-nav">
                                    <li>
                                        <a href="@Url.Action("Index", "Job")">List</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Configure", "Job")">Create</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="">
                                    <i class="fa fa-area-chart"></i> Authentication
                                    <i class="fa arrow"></i>
                                </a>
                                <ul class="sidebar-nav">
                                    <li>
                                        <a href="@Url.Action("Index", "Authentication")">List</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Create", "Authentication")">Create</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>

            <article class="content">
                <div class="title-block">
                    <h1 class="title">@Model.Title</h1>
                    @if (!string.IsNullOrWhiteSpace(Model.TitleDescription))
                    {
                        <p class="title-description">@Model.TitleDescription</p>
                    }
                </div>

                @RenderBody()
            </article>

            <footer class="footer">
                <div class="footer-block text-center w-100">
                    <a href="https://github.com/JustABackup/JustABackup" target="_blank" rel="noreferrer">Just A Backup</a> &copy; @DateTime.Now.Year
                </div>
            </footer>
        </div>
    </div>

    <environment names="Development">
        <script src="~/js/vendor.js"></script>
        <script src="~/lib/jqcron-quartz/src/jqCron.js"></script>
        <script src="~/lib/jqcron-quartz/src/jqCron.en.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/app.js"></script>
        <script src="~/js/extensions.js" asp-append-version="true"></script>
        <script src="~/js/menu-handler.js" asp-append-version="true"></script>
        <script src="~/js/jqcron.js" asp-append-version="true"></script>
        <script src="~/js/list-multiselect.js" asp-append-version="true"></script>
        <script src="~/js/input-templates.js" asp-append-version="true"></script>
        <script src="~/js/dynamic-form.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
